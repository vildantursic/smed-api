{
  "name": "w-api",
  "version": "1.0.0",
  "description": "boilerplate for api",
  "main": "app.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/app.js",
    "watch-node": "nodemon dist/app.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "test": "npm run test",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vildantursic/w-api.git"
  },
  "keywords": [
    "api",
    "expressjs",
    "nodejs"
  ],
  "author": " <vildantursic@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vildantursic/w-api/issues"
  },
  "homepage": "https://github.com/vildantursic/w-api#readme",
  "dependencies": {
    "@types/express-graphql": "^0.6.1",
    "@types/faker": "^4.1.2",
    "@types/graphql": "^0.12.7",
    "apollo-server-express": "^1.3.4",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "faker": "^4.1.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.11"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/body-parser": "^1.16.8",
    "@types/mongoose": "^4.7.34",
    "@types/lodash": "^4.14.91",
    "concurrently": "^3.5.1",
    "nodemon": "^1.17.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "ts-node": "^5.0.0"
  }
}
